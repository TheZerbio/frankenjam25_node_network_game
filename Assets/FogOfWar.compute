#pragma kernel CSMain

RWTexture2D<float> Result;
float2 Center;
float Radius;
float TextureSize;

[numthreads(8, 8, 1)]
void CSMain(uint3 id : SV_DispatchThreadID)
{
    float2 uv = id.xy / TextureSize;
    float2 delta = uv - Center;
    float dist = length(delta);

    if (dist < Radius)
    {
        Result[id.xy] = 1.0; // fully visible
    }
}
